<div class="row item">
  <div class="col-sm-1 hidden-xs">
    <div class="position">
      <%= position %>.
    </div>
  </div>

  <div class="col-xs-1 vote-area">
  </div>

  <div class="col-xs-8 col-sm-9 col-md-10">

    <div class="row">

      <div class="col-xs-2">

        <div class="picture">
        </div>

      </div>
      <div class="col-xs-10 title-wrapper">

        <span class="title" title="<%= title %>">
          <% if(!!link) { %>
            <a href="<%= link %>" target="_blank" title="Перейти на внешнюю страницу"><%= title %></a>
          <% } else { %>
            <%= title %>
          <% }  %>
        </span>

        <% if(can_edit) { %>
          <div class="controls pull-right hidden">
            <a href='#' class='btn btn-primary btn-edit btn-xs' title="Редактировать">
              <span class="hidden-xs">Редактировать</span>
              <span class="visible-xs"><i class="glyphicon glyphicon-pencil"></i></span>
            </a>
            <a href='#' class='btn btn-danger btn-destroy btn-xs' title="Удалить">
              <span class="hidden-xs">Удалить</span>
              <span class="visible-xs"><i class="glyphicon glyphicon-remove"></i></span>
            </a>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
<hr />
