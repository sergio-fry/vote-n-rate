<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <form class='edit-form form'>
      <input class='input title form-control' placeholder="Заголовок" value="<%- title %>" />
      <br />
<textarea class='input description form-control' placeholder="Описание, если хотите" rows=5>
<%= description %>
</textarea>

      <br />
      <input type="submit" value="Сохранить" class="btn btn-primary pull-right" style="margin-left: 10px" />
      <input type="reset" value="Отменить" class="btn btn-default pull-right" />
    </form>
  </div>
</div>
